[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_info = {+pri_b304_doors_hit} ph_door@close
hit_on_bone = 2|%+pri_b304_doors_hit%

[ph_door@close]
locked = false
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_info = {+pri_b304_doors_open} ph_door@open
on_use = %+pri_b304_doors_open%
hit_on_bone = 1|ph_door@free|2|ph_door@free

[ph_door@open]
locked = false
closed = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_info = {-pri_b304_doors_open} ph_door@close
on_use = %-pri_b304_doors_open%
hit_on_bone = 1|ph_door@free|2|ph_door@free

[ph_door@free]
locked = false
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
no_force = true
on_use = ph_door@open