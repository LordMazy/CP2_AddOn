[logic]
active = {-frits_prohodi} walker, {+frits_prohodi} walker2

[walker]
path_walk = frits_walk
path_look = frits_look
on_actor_dist_le = 3 | {+frits_prohodi} walker1 %=arhara_dialog.sms_frits2%, {-frits_prohodi} remark@alarm %+zemlyk_bazar =arhara_dialog.sms_frits1%

[remark@alarm]
anim = assault
target = actor
on_timer = 10000 | walker@norma %=arhara_dialog.sms_frits3%

[walker@norma]
path_walk = frits_walk
path_look = frits_look
on_actor_dist_le = 3 | {+frits_prohodi} walker1 %=arhara_dialog.sms_frits2%

[walker1]
path_walk = frits1_walk
path_look = frits1_look
meet = no_meet
on_actor_not_in_zone = frits_zone_restrictor| walker2 %-frits_go%

[walker2]
path_walk = frits_walk
path_look = frits_look
meet = no_meet
on_actor_dist_le = 3 | walker1 %=arhara_dialog.sms_frits4 +frits_go%
