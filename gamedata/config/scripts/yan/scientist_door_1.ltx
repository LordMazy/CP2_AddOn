[logic]
active = ph_door@closed

[ph_door@closed]
locked = false
closed = true
snd_init = trader_door_unlock
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@open

[ph_door@open]
locked = false
closed = false
snd_init = trader_door_unlock
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_info = {-yan_bunker_door_2_open !ph_door.door_is_npc_used} ph_door@closed
on_use = {-yan_bunker_door_2_open} ph_door@closed
