	if bit_and(fix, current_fix) ~= 0 then return end

	amk.save_variable( "nfx", bit_or(fix, current_fix) )
-------------------------------------------------------------------------------------------------------------------
--	if bit_and(fix, 1) ~= 0 then return end

	local obj = AI:story_object(story_ids.lc_escape_to_darkvalley)
