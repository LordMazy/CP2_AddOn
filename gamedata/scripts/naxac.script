	obj = AI:create( AI:spawn_id(story_ids.lc_escape_to_darkvalley) )
	level.map_add_object_spot_ser(obj.id, "level_changer2", "to_darkvalley")

	obj = AI:story_object(story_ids.lc_darkvalley_to_escape)
	if obj then
		level.map_remove_object_spot(obj.id, "level_changer2")
		level.map_add_object_spot_ser(obj.id, "level_changer3", "to_escape")
	end
-------------------------------------------------------------------------------------------------------------------
