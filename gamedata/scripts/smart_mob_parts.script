local del_corpse = {
	ohota_polter1 = true,
	ohota_polter3 = true,
	ohota_polter_flame = true,
	m_poltergeist_normal_flame = true,
	m_poltergeist_strong_flame = true
}
	
local tbl_hit = {}

function on_hit(obj, bone_index, amount)
--	if amount <= 0 then return false end

	local sect = obj:section()
	if del_corpse[sect] then return false end

	local id = obj:id()
	local th = tbl_hit[id]
	if th == nil then
		for i, t in ipairs(monsters) do
			if string.find(sect,t.sect) then
				th = {}
				th.del = {}
				th.part = t.part
				th.bones = t.bones
				th.cnt = #t.bones
				tbl_hit[id] = th
				break
			end
		end
		if th == nil then return false end
	end


	local res = false
	for i, v in ipairs(th.bones) do
		if th.del[i]==nil then		-- если эту часть уже отстрелили, то не считаем
			for ii, vv in ipairs (v) do
				if vv == bone_index then
					th.del[i] = true
				--	if game_options.DEBUG then
						log("~ [%s] del part from [%s:%d] , bone_index = %d", script_name(), sect, id, bone_index)
					--	amk.send_tip("","Монстру оторвало "..game.translate_string(get_inv_name(t.part))..".")
				--	end
					res = true
					break
				end
			end
			if res then break end
		end
	end
	return res
end

function on_death(obj)
	
	local id = obj:id()
	
	if alife():object(id) == nil then return end
	
	if del_corpse[obj:section()] then		-- удаляем тушку
		alife():release( alife():object(id), true )
		return
	end

	if tbl_hit[id] == nil then		-- убили с одного попадания, сымитируем хит
		on_hit(obj, math.random(0,51), 1)
	end

	local t = tbl_hit[id]
	if t ~= nil then		-- подранили, посчитаем, сколько частей осталось
		local n = t.cnt - table.size(t.del)
		-- удаляем движковую запчасть
		this.remove_item(obj:object(t.part))
		local prob = game_options.RareMonsterParts and sys_ini:r_float(obj:section(), "Spawn_Inventory_Item_Probability") or 1
		if n > 0 then
			for i = 1, n do
				if (math.random() <= prob) then
					amk.spawn_item_in_inv(t.part, obj)
				end
			end
		end
		tbl_hit[id] = nil
	end
end

function remove_item(item)
	if item==nil then return end
	local sobj = alife():object(item:id())
	if sobj then alife():release(sobj, true) end
end
